manifest {
    name = 'HICF2 WGS analysis'
    description = 'Pipeline does this and that'
    mainScript = 'HICF2.nf'
    version = '1.0.0'
    author = 'Edoardo Giacopuzzi'
    nextflowVersion = '20.10.0'
}

singularity_basedir = '/well/gel/HICF2/software/singularity'

tower {
  accessToken = '8d2b621222e112626215ad9aff1d8b29d758ad03'
  enabled = true
}

report {
  enabled = true
  file = "${params.out_folder}/pipeline_report.html"
}

singularity {
  enabled = true
  autoMounts = true
  cacheDir = "${singularity_basedir}"
}

env {
  SINGULARITY_CACHEDIR = "${singularity_basedir}/cache_dir"
  SINGULARITY_TMPDIR = "${singularity_basedir}/tmp_dir"
}

params {
  useSingularity = true

  ref='/well/gel/HICF2/ref/genomes/GRCh38/bwakit/hs38DH.fa'
  somalier_data = '/well/gel/HICF2/ref/somalier_data'
  regions = '/well/gel/HICF2/ref/geneanno/gencode/gencode.v31.annotation.exons.merged.bed.gz'
  chrs_folder = '/well/gel/HICF2/ref/genomes/GRCh38/chrs/'

  roh_AFfile = '/well/gel/HICF2/ref/ROH_resources/gnomAD_v3_AF.tab.gz'
  roh_gmaps = '/well/gel/HICF2/ref/ROH_resources/Genetic_maps'

  exphunter_catalog = '/well/gel/HICF2/software/ExpansionHunter/3.2.2/variant_catalog/hg38/variant_catalog.json'
}

profiles {
  cluster {
    executor {
      name = 'sge'
      queueSize = 200
      pollInterval = '2 min'
      queueStatInterval = '2 min'
      dumpInterval = '2 min'
    }
    process {
      includeConfig 'singularity_images.config'

      withLabel: highcores {
        queue='short.qc'
        clusterOptions='-pe shmem 10'
      }
      withLabel: highcores_AVX {
        queue='short.qc@@short.hge'
        clusterOptions='-pe shmem 10'
      }
      withLabel: lowcores {
        queue='short.qc'
        clusterOptions='-pe shmem 5'
      }
      withLabel: singlecore {
        queue='short.qc'
        clusterOptions='-pe shmem 1'
      }
      withName: multiqc {
        executor = 'local'
        cpus = 4
      }
    }
  }

  humbug {
    executor {
      name = 'local'
      queueSize = 2
    }

    process {
      includeConfig 'singularity_images.config'

      withLabel: highcores {
        cpus=10
      }
      withLabel: lowcores {
        cpus=5
      }
      withLabel: singlecore {
        cpus=1
      }
    }
  }
}